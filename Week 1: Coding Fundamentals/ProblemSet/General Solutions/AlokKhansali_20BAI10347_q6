#include <bits/stdc++.h>          //cpp code
using namespace std;
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
        int t;
        cin>>t;
        while(t--){
         int a,b;
         cin>>a>>b;
         if((a+b)%3==0 && abs(a-b)<=min(a,b))
              cout<<("YES")<<'\n';
          else
              cout<<"NO"<<'\n';
          }
          return(0);
}
#python code
for x in range(int(input())):
    a,b=map(int,input().split())
    if((a+b)%3==0 and (abs(a-b)<=min(a,b))):
        print("YES")
    else:
        print("NO")
