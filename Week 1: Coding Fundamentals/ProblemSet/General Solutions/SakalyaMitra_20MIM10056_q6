#include<iostream>
using namespace std;

int swap(int a, int b){
    int temp=a;
    a=b;
    b=temp;
}

int main(){
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a>>b;
        if(a<b){
            swap(a,b);
        }
        if(a>2*b){
            cout<<"NO"<<endl;
        }
        if((a+b)%3==0){
            cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
        
        
    }
    return 0;
}
